@model IEnumerable<EmprestimosModel>

<div class="container">
<div class="d-flex justify-content-between align-items-center mb-5">
    <h1>Empréstimos</h1>
        <a asp-controller="emprestimo" asp-action="registar" class="btn btn-success mx-2"><i class="bi bi-file-earmark-plus mx-1"></i>Adicionar Empréstimo</a>
    </div>
        @if(TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success text-light" role="alert">
                @TempData["MensagemSucesso"]
            </div>
        }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["MensagemErro"]
        </div>
    }
        

<table id="emprestimos" class="table table-light table-hover">
    <thead>
        <tr>
            <th scope="col">Alugou</th>
            <th scope="col">Emprestou</th>
            <th scope="col">Livro</th>
            <th scope="col">Última Atualização</th>
            <th></th>
           
        </tr>
    </thead>
    <tbody>
        
        @if(Model != null)
        {

            @foreach (var registos in Model)
            {
                <tr>
                    <th scope="row">@registos.Alugou</th>
                    <td>@registos.Emprestou</td>
                    <td>@registos.Livro</td>
                    <td>@registos.DataUltimaAtualizacao</td>
                    <td>
                            <a asp-controller="emprestimo" asp-action="editar" asp-route-id="@registos.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil-square mx-1"></i>Editar</a>
                            <a asp-controller="emprestimo" asp-action="apagar" asp-route-id="@registos.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill mx-1"></i>Apagar</a>
                    </td>
                </tr>
            }
            
        }
        else
        {
            <p>Não existem registos.</p>
        }

    </tbody>
</table>

</div>